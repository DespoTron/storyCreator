  <body>
    <h1>Welcome to a world of Imagination!</h1>
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="user-id">Enter your User ID:</label>
        <input class="form-control" type="number" name="userid" placeholder="user id">
          style="width: 300px; margin: 1em">
        <label for="loginPassword">Enter your password here:</label>
        <input class="form-control" type="password" name="password" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    </form>
  </body>
